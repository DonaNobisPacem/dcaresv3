<h1 class="text-center">
	<strong><%= @project.title %></strong>
</h1>

<div class="jumbotron">

	<p>
		<strong>Belongs to: </strong> 
		<%= link_to @project.university.description, @project.university %> 
	</p>

	<p>
		<strong>Status: </strong> 
		<%= @project.status_desc %> 
	</p>

	<p>
		<strong>Approved Budget Ceiling: </strong> 
		<%= number_with_precision( @project.abc, precision: 2, delimiter: ',' ) if @project.abc.present? %>
	</p>

	<p>
		<strong>Percent Completion: </strong> 
		<div class="progress">
			<div class="progress-bar progress-bar-info active" role="progressbar" aria-valuenow="<%= @project.progress %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= @project.progress %>%">
				<span><%= @project.progress %>% Complete</span>
			</div>
		</div>
	</p>

	<p>
		<strong>Contractor/Supplier: </strong> 
		<%= @project.contractor %> 
	</p>

	<p>
		<strong>Target Date of Completion: </strong> 
		<%= @project.tdc.try(:strftime, "%d-%^b-%Y") %> 
	</p>

	<p>
		<strong>Date of Notice of Award: </strong> 
		<%= @project.noa.try(:strftime, "%d-%^b-%Y") %>
	</p>

	<p>
		<strong>Date of Notice to Proceed: </strong> 
		<%= @project.ntp.try(:strftime, "%d-%^b-%Y") %>
	</p>

	<div class="row">
		<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
			<div class="panel panel-default">
				<div class="panel-heading" role="tab" id="heading-project-funds">
					<h4 class="panel-title text-center">
						<a role="button" data-toggle="collapse" data-parent="#accordion" href="#panel-project-funds">
							<strong>Source of Funds</strong>
						</a>
					</h4>
				</div>
				<div id="panel-project-funds" class="panel-collapse collapse" role="tabpanel">
					<div class="panel-body">
						<% @project.project_funds.each do |project_fund| %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>