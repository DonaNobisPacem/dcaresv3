<li class="list-group-item">
  <span class="glyphicon glyphicon-plus"></span>
  <small class="text-muted"><%= a.created_at.strftime('%H:%M:%S %-d %B %Y') %></small><br/>
  <strong><%= activity.owner ? activity.owner.email : 'Guest' %></strong>
  <% if a.trackable %>
    created <%= link_to a.trackable.title, project_path(a.trackable) %>.
  <% else %>
    added a project that is currently deleted.
  <% end %>
</li>