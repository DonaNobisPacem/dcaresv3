<% if current_user.admin %>
<p id="notice"><%= notice %></p>
</br>
<h1><b>List of Bidding Statuses</b></h1>
<%= link_to '<i class="fa fa-plus"></i> New Bidding Status'.html_safe, new_bid_path, :class => "pull-right" %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @bids.each do |bid| %>
      <tr>
        <td><%= bid.description %></td>
        <td style="text-align: right;">
           <%= link_to 'Edit', edit_bid_path(bid) %> | <%= link_to 'Destroy', bid, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
 <%= render 'shared/unauthorized' %>
<% end %>

