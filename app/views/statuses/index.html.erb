<% if current_user.admin %>
<p id="notice"><%= notice %></p>
</br>
<h1><b>List of Project Statuses</b></h1>
<%= link_to '<i class="fa fa-plus"></i> New Project Status'.html_safe, new_status_path, :class => "pull-right" %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.description %></td>
        <td style="text-align: right;">
           <%= link_to 'Edit', edit_status_path(status) %> | <%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
 <%= render 'shared/unauthorized' %>
<% end %>

