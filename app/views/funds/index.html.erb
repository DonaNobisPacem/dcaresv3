<% if current_user.admin %>
<p id="notice"><%= notice %></p>
</br>
<h1><b>List of Fund Sources</b></h1>
<%= link_to '<i class="fa fa-plus"></i> New Fund Source'.html_safe, new_fund_path, :class => "pull-right" %>
<table class="table table-hover table-responsive">
  <thead>
    <tr>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @funds.each do |fund| %>
      <tr>
        <td><%= fund.description %></td>
        <td style="text-align: right;">
           <%= link_to 'Edit', edit_fund_path(fund) %> | <%= link_to 'Destroy', fund, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% else %>
 <%= render 'shared/unauthorized' %>
<% end %>

